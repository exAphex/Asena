<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:t="sap.ui.table" controllerName="com.asena.ui5.controller.views.Logs">
	<Page showHeader="false">
		<content>
			<t:Table id="tblLogs" rows="{path: '/',
				sorter : {
					path : 'timestamp',
					descending: true
				 }
			}" selectionBehavior="Row" selectionMode="Single" visibleRowCount="20" visibleRowCountMode="Auto" rowActionCount="1" ariaLabelledBy="title">
				<t:rowActionTemplate>
					<t:RowAction>
						<t:items>
							<t:RowActionItem visible="true" icon="sap-icon://detail-view" press="_onLogDetail" />
						</t:items>
					</t:RowAction>
				</t:rowActionTemplate>
				<t:toolbar>
					<Toolbar>
						<ToolbarSpacer />
						<Button icon="sap-icon://delete" press="_onDeleteLogs" />
						<Button icon="sap-icon://refresh" press="_onRefreshLogs" />
						<ToolbarSeparator />
						<SearchField search="_onSearchLogs" width="15rem" />
					</Toolbar>
				</t:toolbar>
				<t:columns>
					<t:Column sortProperty="timestamp" width="10em">
						<Label text="{i18n>Logs.colTime}" />
						<t:template>
							<Text text="{timestamp}" wrapping="false" />
						</t:template>
					</t:Column>
					<t:Column sortProperty="type" width="5em">
						<Label text="{i18n>Logs.colType}" />
						<t:template>
							<ObjectStatus
								text="Error"
								inverted="true"
								state="Error" 
								icon="sap-icon://message-error"/>
						</t:template>
					</t:Column>
					<t:Column sortProperty="message" width="auto">
						<Label text="{i18n>Logs.colMessage}" />
						<t:template>
							<Text text="{message}" wrapping="false" />
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</content>
	</Page>
</mvc:View>