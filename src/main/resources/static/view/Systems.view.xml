<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:t="sap.ui.table" controllerName="com.asena.ui5.controller.views.Systems">
	<Page showHeader="false">
		<content>
			<t:Table id="tblSystems" rows="{/}" selectionBehavior="Row" selectionMode="Single" visibleRowCount="20" visibleRowCountMode="Auto" rowActionCount="2" ariaLabelledBy="title">
				<t:rowActionTemplate>
					<t:RowAction>
						<t:items>
							<t:RowActionItem visible="true" icon="sap-icon://edit" press="_onSystemEdit" />
							<t:RowActionItem visible="true" icon="sap-icon://delete" press="_onSystemDelete" />
						</t:items>
					</t:RowAction>
				</t:rowActionTemplate>
				<t:toolbar>
					<Toolbar>
						<ToolbarSpacer />
						<Button icon="sap-icon://add-coursebook" press="_onAddSystem" />
						<Button icon="sap-icon://refresh" press="_onRefreshSystems" />
						<ToolbarSeparator />
						<SearchField search="_onSearchSystems" width="15rem" />
					</Toolbar>
				</t:toolbar>
				<t:columns>
					<t:Column sortProperty="name" width="auto">
						<Label text="{i18n>Systems.colName}" />
						<t:template>
							<Text text="{name}" wrapping="false" />
						</t:template>
					</t:Column>
					<t:Column sortProperty="description" width="auto">
						<Label text="{i18n>Systems.colDescription}" />
						<t:template>
							<Text text="{description}" wrapping="false" />
						</t:template>
					</t:Column>
					<t:Column sortProperty="type" width="auto">
						<Label text="{i18n>Systems.colType}" />
						<t:template>
							<Text text="{type}" wrapping="false" />
						</t:template>
					</t:Column>
					<t:Column sortProperty="active" width="auto">
						<Label text="{i18n>Systems.colStatus}" />
						<t:template>
							<tnt:InfoLabel
								text="{path: 'active',formatter: '.formatter.convertSystemStatus'}"
								displayOnly="true"
								colorScheme= "{path: 'active', formatter: '.formatter.convertSystemColor'}" />
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</content>
	</Page>
</mvc:View>