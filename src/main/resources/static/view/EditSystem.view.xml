<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table" xmlns:layout="sap.ui.layout" xmlns:m="sap.m" xmlns:f="sap.ui.layout.form" controllerName="com.asena.ui5.controller.views.EditSystem">
    <ObjectPageLayout useIconTabBar="true" upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageHeader objectTitle="{/name}" class="sapUiTinyMarginTop" objectSubtitle="{/description}" />
        </headerTitle>
        <sections>
            <ObjectPageSection titleUppercase="false" title="{i18n>EditSystem.titSystem}">
                <subSections>
                    <ObjectPageSubSection titleUppercase="false">
                        <blocks>
                            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                            <f:SimpleForm class="editableForm sapUiCozy" columnsL="2" columnsM="1" editable="true" emptySpanL="0" emptySpanM="0" labelSpanL="3" labelSpanM="3" layout="ResponsiveGridLayout">
                                <f:content>
                                    <m:Label text="{i18n>EditSystem.lblSystemName}" />
                                    <m:Input value="{/name}" editable="false" />
                                    <m:Label text="{i18n>EditSystem.lblType}" />
                                    <m:Input value="{/type}" editable="false" />
                                    <m:Label text="{i18n>EditSystem.lblDescription}" />
                                    <m:Input value="{/description}" />
                                    <m:Label text="{i18n>EditSystem.lblStatus}" />
                                    <m:Switch type="AcceptReject" state="{/active}" />
                                </f:content>
                            </f:SimpleForm>
                            <m:Panel width="auto" visible="{/active}">
                                <m:content>
                                    <f:SimpleForm class="editableForm sapUiCozy" columnsL="2" columnsM="1" editable="true" emptySpanL="0" emptySpanM="0" labelSpanL="3" labelSpanM="3" layout="ResponsiveGridLayout">
                                        <f:content>
                                            <m:Label text="{i18n>EditSystem.lblUserName}" />
                                            <m:Input value="{/serviceUser/userName}" editable="false" />
                                            <m:Label text="{i18n>EditSystem.lblPassword}" />
                                            <m:Input value="{/serviceUser/password}" />
                                        </f:content>
                                    </f:SimpleForm>
                                </m:content>
                            </m:Panel>
                            </l:VerticalLayout>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection titleUppercase="false" title="{i18n>EditSystem.titConnProperties}">
                <subSections>
                    <ObjectPageSubSection  titleUppercase="false">
                        <blocks>
                            <t:Table id="tblConnProperties" rows="{path: '/properties/',
                            sorter : {
                                path : 'key' 
                             }
                        }" selectionBehavior="Row" selectionMode="Single" visibleRowCount="20" visibleRowCountMode="Auto" rowActionCount="2" ariaLabelledBy="title">
                                <t:rowActionTemplate>
                                    <t:RowAction>
                                        <t:items>
                                            <t:RowActionItem visible="true" icon="sap-icon://edit" press="_onConnectionPropertyEdit" />
                                            <t:RowActionItem visible="true" icon="sap-icon://delete" press="_onConnectionPropertyDelete" />
                                        </t:items>
                                    </t:RowAction>
                                </t:rowActionTemplate>
                                <t:toolbar>
                                    <m:Toolbar>
                                        <m:ToolbarSpacer />
                                        <m:Button icon="sap-icon://add" press="_onAddConnectionProperty" />
                                        <m:ToolbarSeparator />
                                        <m:SearchField search="_onSearchConnectionProperty" width="15rem" />
                                    </m:Toolbar>
                                </t:toolbar>
                                <t:columns>
                                    <t:Column sortProperty="key" width="auto">
                                        <m:Label text="{i18n>EditSystem.colName}" />
                                        <t:template>
                                            <m:Text text="{key}" wrapping="false" />
                                        </t:template>
                                    </t:Column>
                                    <t:Column sortProperty="value" width="auto">
                                        <m:Label text="{i18n>EditSystem.colValue}" />
                                        <t:template>
                                            <m:Text text="{value}" wrapping="false" />
                                        </t:template>
                                    </t:Column>
                                    <t:Column sortProperty="description" width="auto">
                                        <m:Label text="{i18n>EditSystem.colDescription}" />
                                        <t:template>
                                            <m:Text text="{description}" wrapping="false" />
                                        </t:template>
                                    </t:Column>
                                </t:columns>
                            </t:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection titleUppercase="false" title="{i18n>EditSystem.titWriteMapping}">
                <subSections>
                    <ObjectPageSubSection titleUppercase="false">
                        <blocks>
                            <t:Table id="tblWriteMapping" rows="{path: '/writeMappings/',
                            sorter : {
                                path : 'key' 
                             }
                        }" selectionBehavior="Row" selectionMode="Single" visibleRowCount="20" visibleRowCountMode="Auto" rowActionCount="2" ariaLabelledBy="title">
                                <t:rowActionTemplate>
                                    <t:RowAction>
                                        <t:items>
                                            <t:RowActionItem visible="true" icon="sap-icon://edit" press="_onWriteMappingEdit" />
                                            <t:RowActionItem visible="true" icon="sap-icon://delete" press="_onWriteMappingDelete" />
                                        </t:items>
                                    </t:RowAction>
                                </t:rowActionTemplate>
                                <t:toolbar>
                                    <m:Toolbar>
                                        <m:ToolbarSpacer />
                                        <m:Button icon="sap-icon://add" press="_onAddWriteMapping" />
                                        <m:ToolbarSeparator />
                                        <m:SearchField search="_onSearchWriteMappings" width="15rem" />
                                    </m:Toolbar>
                                </t:toolbar>
                                <t:columns>
                                    <t:Column sortProperty="source" width="auto">
                                        <m:Label text="{i18n>EditSystem.colSource}" />
                                        <t:template>
                                            <m:Text text="{source}" wrapping="false" />
                                        </t:template>
                                    </t:Column>
                                    <t:Column sortProperty="destination" width="auto">
                                        <m:Label text="{i18n>EditSystem.colDestination}" />
                                        <t:template>
                                            <m:Text text="{destination}" wrapping="false" />
                                        </t:template>
                                    </t:Column>
                                    <t:Column sortProperty="description" width="auto">
                                        <m:Label text="{i18n>EditSystem.colTransformation}" />
                                        <t:template>
                                            <m:Text text="{description}" wrapping="false" />
                                        </t:template>
                                    </t:Column>
                                </t:columns>
                            </t:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>